{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "es6",
        "rootDir": "./src",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "outDir": "./dist",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/middleware.ts",
        "src/app",
        "src/components",
        "src/hooks",
        "**/tailwind.config.ts"
    ]
}